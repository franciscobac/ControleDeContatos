@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 d-block" role="button" asp-controller="ControllerContato" asp-action="Index">Cancelar exclusão</a>
<br />
<a class="btn btn-danger w-100 d-block" role="button" asp-controller="ControllerContato"asp-action="Apagar" asp-route-Id="@Model.Id">Confirmar exclusão</a>